<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBaseline_toBaselineOf="parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="1203dp"
        android:layout_height="679dp"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="376dp"
        android:layout_height="48dp"
        android:text="Внеси шифра на клиент:"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="68dp" />

    <EditText
        android:id="@+id/ClientID"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Лоцирај клиент"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="553dp" />

    <ListView
        android:id="@+id/listview1"
        android:layout_width="597dp"
        android:layout_height="297dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="571dp"
        tools:layout_editor_absoluteY="298dp" />

    <Button
        android:id="@+id/pregledajKlient"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Прегледај клиенти"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/odjavi"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Одјави"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="645dp" />
</androidx.constraintlayout.widget.ConstraintLayout>